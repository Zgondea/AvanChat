{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "dockerCompose",
    "dockerComposePath": "docker-compose.yml"
  },
  "deploy": {
    "numReplicas": 1,
    "restartPolicyType": "always"
  },
  "environments": {
    "production": {
      "variables": {
        "ENVIRONMENT": "production",
        "DEBUG": "false",
        "LOG_LEVEL": "INFO"
      }
    }
  }
}